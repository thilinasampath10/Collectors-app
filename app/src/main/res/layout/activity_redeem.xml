<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thilina.e1.Redeem">


    <Button
        android:id="@+id/btnCheck"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/button_shape_ovel"
        android:text="Check Balance" />

    <EditText
        android:id="@+id/txtUserId"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/btnCheck"
        android:layout_alignBottom="@+id/btnCheck"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:ems="10"
        android:hint="User Id"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtRemainingBalance"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/cast_expanded_controller_ad_label_background_color"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnRedeem"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/txtRemainingBalance"
        android:layout_alignStart="@+id/txtRemainingBalance"
        android:layout_below="@+id/txtRemainingBalance"
        android:layout_marginTop="38dp"
        android:background="#00EC00"
        android:text="REDEEM NOW" />
</RelativeLayout>

